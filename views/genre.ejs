<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Includes the meta tags template -->
    <%- include('meta'); %>
    <title>Imposter Prints - Shop <%= genre %></title>
  </head>
  <body>
    <!-- https://getbootstrap.com/docs/5.3/layout/containers/ -->
    <!-- Boostrap container with rows and columns -->
    <div class="container">
      <!-- Includes the navbar template -->
      <%- include('navbar'); %>
      <!-- Shows selected genre -->
      <h3 class="text-center mb-3"><%= genre %></h3>
      <div class="row">
        <!-- Loops through all movies with specific genre supplied by backend -->
        <% for (let i = 0; i < movies.length; i++) {%>
        <div class="col-md-4 col-6 col-xs-6">
          <!-- https://getbootstrap.com/docs/5.3/components/card/ -->
          <!-- Boostrap card element of movie posters -->
          <div class="card text-center border-0 mb-4">
            <!-- Links to item page of selected movie -->
            <a
              href="/item?id=<%= movies[i].prodid %>"
              class="text-decoration-none"
            >
              <img
                src="/assets/<%= movies[i].image1 %>"
                alt="poster image"
                class="card-img-top"
              />
              <div class="card-body">
                <h5 class="card-title"><%= movies[i].title %></h5>
              </div>
            </a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <!-- Imports -->
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
